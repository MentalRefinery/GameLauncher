<UserControl x:Class="GameLauncher.Views.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameLauncher.Views"
             mc:Ignorable="d" 
             MinHeight="100" MinWidth="150">
    <Grid x:Name ="LoginBackground" Background="Gray">
        <StackPanel HorizontalAlignment="center" VerticalAlignment="Center" Orientation="Vertical" Margin="166,165,150,164" Width="209">
            <TextBox x:Name="Username" HorizontalAlignment="Center" Height="23" TextWrapping="Wrap" VerticalAlignment="Center" Width="160"></TextBox>
        </StackPanel>
        <Button Name="LoginButton" Content="Login" Margin="223,215,201.8,0" VerticalAlignment="Top" Click="LoginButton_Click"/>

    </Grid>
</UserControl>
